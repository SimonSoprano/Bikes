<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2px"
    android:background="@color/default_secondary_background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:scaleType="fitCenter"
        android:background="#12000000"
        android:src="@drawable/ic_baseline_pedal_bike_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageOfItem_bikeslist"
        android:layout_width="match_parent"
        android:layout_height="200dp"></ImageView>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_margin="10dp"
        android:id="@+id/btn_add_to_basket"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_baseline_shopping_basket_24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/imageOfItem_bikeslist"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/icon_indicator_is_added_tp_basket"
        android:gravity="center"
        android:textSize="22sp"
        android:text="+"
        android:textColor="@color/indicator_color"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_to_basket"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="@id/btn_add_to_basket"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/default_secondary_text_color"
        android:layout_marginVertical="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageOfItem_bikeslist"
        android:id="@+id/model"
        android:text="MODEL:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="@color/default_main_text_color"
        android:layout_marginVertical="3dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/model"
        app:layout_constraintTop_toBottomOf="@id/imageOfItem_bikeslist"
        android:id="@+id/modelField"
        android:text="VFX-650"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/default_main_text_color"
        android:layout_marginVertical="3dp"
        android:textSize="17sp"
        app:layout_constraintRight_toLeftOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/modelField"
        app:layout_constraintTop_toBottomOf="@id/imageOfItem_bikeslist"
        android:id="@+id/name"
        android:text="NAME OF BIKE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="10dp"
        android:textColor="@color/default_main_text_color"
        android:layout_marginVertical="3dp"

        android:textSize="23sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageOfItem_bikeslist"
        android:id="@+id/price"
        android:text="300$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/default_main_text_color"
        android:layout_marginVertical="3dp"
        app:layout_constraintRight_toLeftOf="@id/price"
        app:layout_constraintLeft_toRightOf="@id/brandField"
        app:layout_constraintBottom_toBottomOf="@id/brandField"
        android:id="@+id/color"
        android:text="COLOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/default_secondary_text_color"
        android:layout_marginVertical="4dp"
        app:layout_constraintLeft_toLeftOf="@id/model"
        app:layout_constraintTop_toBottomOf="@id/model"
        android:id="@+id/brand"
        android:text="BRAND:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="@color/default_main_text_color"
        android:textSize="18sp"
        android:layout_marginVertical="3dp"
        app:layout_constraintLeft_toRightOf="@id/brand"
        app:layout_constraintTop_toBottomOf="@id/model"
        android:id="@+id/brandField"
        android:text="KROSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>